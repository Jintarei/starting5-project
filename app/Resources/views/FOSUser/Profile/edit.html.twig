{% extends 'base.html.twig' %}

{% block header %}
<h2>Edit my profile</h2>
{% endblock header %}

{% block body %}

    <section id="connexion_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    {% trans_default_domain 'FOSUserBundle' %}

                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                    <div class="form-group">
                        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.team, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}} ) }}
                    <div class="form-group">
                        {{ form_row(form.current_password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div>
                        <input type="submit" class="btn btn-primary" value="{{ 'Edit'|trans }}" />
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>

{% endblock body %}