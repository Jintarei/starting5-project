{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="col-lg-12 mx-auto">
          {%  include 'starting5/battle/button.html.twig' %}
            <hr>
            <div class="container" id="battleList">`
                <h2>Home Battles</h2>
                <div class="row" id="home">
                        <div class="col-md-4">
                            ACTIVE
                            {% if homeActiveBattle | length > 0 %}
                                {% for battle in homeActiveBattle %}
                                    {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                                {% endfor %}
                            {% else %}
                                <div class="bg-danger">
                                    No Battle.
                                </div>
                            {% endif %}
                        </div>
                    <div class="col-md-4">
                        WAITING...
                        {% if homeWaitingBattle | length > 0 %}
                            {% for battle in homeWaitingBattle %}
                                {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                            {% endfor %}
                        {% else %}
                            <div class="bg-danger">
                                No Battle.
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-4">
                        OVER
                        {% if homeOverBattle | length > 0 %}
                            {% for battle in homeOverBattle %}
                                {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                            {% endfor %}
                        {% else %}
                            <div class="bg-danger">
                                No Battle.
                            </div>
                        {% endif %}
                    </div>
                </div>
                <hr>
                <h2>Away Battles</h2>
                <div class="row" id="away">
                       <div class="col-md-4">
                           ACTIVE
                           {% if awayActiveBattle | length > 0 %}
                               {% for battle in awayActiveBattle %}
                                   {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                               {% endfor %}
                           {% else %}
                               <div class="bg-danger">
                                   No Battle.
                               </div>
                           {% endif %}
                       </div>
                    <div class="col-md-4">
                        INVITATION
                        {% if awayInvitationBattle | length > 0 %}
                            {% for battle in awayInvitationBattle %}
                                {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                            {% endfor %}
                        {% else %}
                            <div class="bg-danger">
                                No Battle.
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-4">
                        OVER
                        {% if awayOverBattle | length > 0 %}
                            {% for battle in awayOverBattle %}
                                {% include 'starting5/battle/battle.html.twig' with {'battle' : battle} %}
                            {% endfor %}
                        {% else %}
                            <div class="bg-danger">
                                No Battle.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
    </div>

{% endblock %}