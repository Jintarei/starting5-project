{% extends 'base.html.twig' %}

    {% block header %}
        <h1>Create New Player</h1>
    {% endblock header %}

{% block body %}

    <section id="about">
        <div class="container">
            <div class="col-md-8 col-md-offset-2">
                <h2>Create New Player</h2>
                {{ form_start(form, { 'action': path('player.new')}) }}
                <div class="form-group">
                    {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.slugPlayer, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.shirtNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.team, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.position, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.nbaDebut, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.born, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.state, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.height, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.weight, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.fGPercentage, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.fTPercentage, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.threePointsPercentage, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.PPG, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.RPG, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.APG, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.BPG, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <hr>
            <h2>All Players</h2>
            <div class="row">
                {% for player in players %}
                    <div class="col-md-3">
                        <img src="{{ asset('images/players/' ~ player.slugPlayer ~ '.jpg') }}"
                             alt="{{ player.slugPlayer }}" width="100%">
                        <h5>
                            {{ player.firstname }} {{ player.lastname }}
                        </h5>
                        <a href="{{ path('player.edit', {'id': player.id}) }}">Edit Player</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}