{% extends 'base.html.twig' %}

    {% block header %}
        <h1>Create New State</h1>
    {% endblock header %}

{% block body %}

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>All Stadiums</h2>
                    <ul>
                        {% for stadium in stadiums %}
                            <li>
                                <h5>
                                    {{ stadium.name }}
                                </h5>
                            </li>
                        {% endfor %}
                    </ul>
                    {{ form_start(form, { 'action': path('stadium.new')}) }}
                    <div class="form-group">
                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.slugStadium, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}