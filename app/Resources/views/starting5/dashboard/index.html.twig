{% extends 'base.html.twig' %}

    {% block header %}
        Mon 5 Majeur
    {% endblock header %}

{% block body %}

        <div class="container myPlayersList">
            <div class="row">
                <h2>My 5IVE
                    {% if(countTeam < 3) %}
                    <a href="{% if(countTeam < 3) %}{{ path('user.team.new') }}{% endif %}" class="btn btn-primary">
                            {% if userTeams|length > 0 %}
                                Create Another 5IVE
                            {% else %}
                                Create My First 5IVE
                            {% endif %}
                    </a>
                    {% endif %}
                </h2>
            </div>
            <div class="myTeams-container">

            {% if userTeams|length > 0 %}
                {% for team in teams %}
                    <h2 class="title">{{ team['data']['name'] }}</h2>
                    <a href="{{ path('user.team.edit', {'id': team['data']['id'] }) }}" class="btn btn-info edit">Edit this 5IVE</a>
                    <div class="details-grid">
                        <div class="item" data-toggle="tooltip" data-placement="top" title="EntraÃ®neur"><i class="far fa-user"></i><span class="text">{{ team['data']['trainer'].fullName }}</span></div>
                        <div class="item border-left-right" data-toggle="tooltip" data-placement="top" title="Stade"><img src="{{ asset('images/stadium.png') }}" alt=""><span class="text">{{ team['data']['stadium'].name }}</span></div>
                        <div class="item border-bottom" data-toggle="tooltip" data-placement="top" title="Rating global"><i class="far fa-star"></i> <span class="text">{{ team['data']['teamRating'] }}</span></div>
                        <div class="item border-top" data-toggle="tooltip" data-placement="top" title="Rating offensive"><img src="{{ asset('images/sword.png') }}" alt=""><span class="text">{{ team['data']['offRating'] }}</span></div>
                        <div class="item border-top border-left-right" data-toggle="tooltip" data-placement="top" title="Rating defensive"><i class="fas fa-shield-alt"></i><span class="text">{{ team['data']['defRating'] }}</span></div>
                    </div>
                    <div class="first-line line">

                            {% set player = team['players']['pointGuard'] %}
                            {% include 'starting5/players/player.html.twig' with {'player': player} %}


                            {% set player = team['players']['shootingGuard'] %}
                            {% include 'starting5/players/player.html.twig' with {'player': player} %}

                            {% set player = team['players']['smallForward'] %}
                            {% include 'starting5/players/player.html.twig' with {'player': player} %}

                    </div>
                    <div class="third-line line">

                            {% set player = team['players']['powerForward'] %}
                            {% include 'starting5/players/player.html.twig' with {'player': player} %}


                            {% set player = team['players']['center'] %}
                            {% include 'starting5/players/player.html.twig' with {'player': player} %}

                    </div>

                {% endfor %}
            {% else %}
                <p class="alert alert-danger">
                    NO 5IVE AVAILABLE
                </p>
            {% endif %}
            </div>
        </div>
{% endblock %}