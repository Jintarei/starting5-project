{% extends 'base.html.twig' %}

    {% block header %}
        Mon 5 Majeur
    {% endblock header %}

{% block body %}
    <section id="about">
        <div class="container">
            <p>
                <a href="{{ path('user.players') }}">Mes joueurs</a>
            </p>
            <h1>All My Centers</h1>
            <div class="row">
                {% if(centers|length > 0) %}
                    {% for player in centers %}
                        <div class="col-md-4">
                            {% include 'starting5/players/player.html.twig' with {'player': player.playerId} %}
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="alert alert-danger">
                        No Centers Available.
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}