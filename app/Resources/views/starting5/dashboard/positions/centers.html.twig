<h1>Centers available</h1>
<label for="form_center" class="required">Select My Center</label>
<select id="form_center" name="form[center]">
    {% for userDivision in userDivisions %}
    {% for team in userDivision.division.team %}
        {% if team.isTop %}
            {% if team.id in userTopTeams %}
                {% if team.centers|length > 0 %}
                    {% for c in team.centers %}
                        <option value="{{ c.id }}">{{ c.fullname }}</option>
                    {% endfor %}
                {% endif %}
            {% endif %}
        {% else %}
            {% if team.centers|length > 0 %}
                {% for c in team.centers %}
                    <option value="{{ c.id }}">{{ c.fullname }}</option>
                {% endfor %}
            {% endif %}
        {% endif %}
    {% endfor %}
    {% endfor %}
</select>
{% for userDivision in userDivisions %}
    <div class="row">
        {% for team in userDivision.division.team %}
            <div class="col-md-4 text-center">
                <img src="{{ asset('images/teams/' ~ team.slugTeam ~ '.svg') }}"
                     alt="{{ team.name }}" width="100px">
                {% if team.isTop %}
                    {% if team.id in userTopTeams %}
                        {% if team.centers|length > 0 %}
                            {% for c in team.centers %}
                                <div>
                                    #{{ c.shirtNumber }} - {{ c.fullname }}
                                </div>
                            {% endfor %}
                        {% else %}
                            <p>No Centers available for this team</p>
                        {% endif %}
                    {% else %}
                        <p>Lock Team</p>
                    {% endif %}
                {% else %}
                    {% if team.centers|length > 0 %}
                        {% for c in team.centers %}
                            <div>
                                #{{ c.shirtNumber }} - {{ c.fullname }}
                            </div>
                        {% endfor %}
                    {% else %}
                        <p>No Centers available for this team</p>
                    {% endif %}
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endfor %}